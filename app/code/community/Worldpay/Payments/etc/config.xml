<?xml version="1.0" encoding="UTF-8"?>
<config>
    <modules>
        <Worldpay_Payments>
            <version>1.0.1</version>
        </Worldpay_Payments>
    </modules>
    <global>
        <blocks>
            <worldpay>
                <class>Worldpay_Payments_Block</class>
            </worldpay>
        </blocks>
        <helpers>
            <worldpay>
                <class>Worldpay_Payments_Helper</class>
            </worldpay>
        </helpers>
        <models>
            <worldpay>
                <class>Worldpay_Payments_Model</class>
                <resourceModel>worldpay_resource</resourceModel>
            </worldpay>
            <worldpay_resource>
                <class>Worldpay_Payments_Model_Resource</class>
                <entities>
                    <payment>
                        <table>worldpay_payment</table>
                    </payment>
                </entities>
            </worldpay_resource>
        </models>
        <resources>
            <worldpay_setup>
                <setup>
                    <module>Worldpay_Payments</module>
                    <class>Worldpay_Payments_Model_Resource_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </worldpay_setup>
            <worldpay_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </worldpay_write>
            <worldpay_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </worldpay_read>
        </resources>
    </global>
    <default>
        <payment>
            <worldpay_cc>
                <title>Credit Cards</title>
                <model>worldpay/paymentMethods_creditCards</model>
                <active>1</active>
                <allow_specific>0</allow_specific>
                <payment_action>authorize_capture</payment_action>
            </worldpay_cc>
            <worldpay>
                <active>0</active>
                <available>0</available>
                <model>worldpay/paymentMethods_dummy</model>
            </worldpay>
        </payment>
    </default>
    <frontend>
        <routers>
            <worldpay>
                <use>standard</use>
                <args>
                    <module>Worldpay_Payments</module>
                    <frontName>worldpay</frontName>
                </args>
            </worldpay>
        </routers>
        <layout>
            <updates>
                <Worldpay_Payments>
                    <file>worldpay.xml</file>
                </Worldpay_Payments>
            </updates>
        </layout>
        <translate>
            <modules>
                <Worldpay_Payments>
                    <files>
                        <default>Worldpay_Payments.csv</default>
                    </files>
                </Worldpay_Payments>
            </modules>
        </translate>
    </frontend>
    <adminhtml>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <worldpay>
                                            <title>WorldPay</title>
                                        </worldpay>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
        <layout>
            <updates>
                <worldpay>
                    <file>worldpay.xml</file>
                </worldpay>
            </updates>
        </layout>
    </adminhtml>
</config>
